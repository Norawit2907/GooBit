@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_layoutforLogin.cshtml";
}
<link rel="stylesheet" href="~/css/register_style.css" asp-append-version="true" />
<link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>

<div class="container">
    <div class="login-detail">
        <div class="login-context">
            <h1>GOOBIT</h1>
            <p>Popular place for finding people</p>
        </div>
    </div>
    <div class="login-container">
        <form>
            <h2>Hello!</h2>
            <p>Sign Up to Get Started</p>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <input class="input" type="text " placeholder="First Name">
                </div>
            </div>

            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <input class="input" type="text " placeholder="Last Name">
                </div>
            </div>

            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-envelope"></i>
                </div>
                <div>
                    <input class="input" type="email" placeholder="Email Address">
                </div>
            </div>

            <div class="input-div two">
                <div class="i">
                    <i class="fas fa-lock"></i>
                </div>
                <div>
                    <input class="input" type="password" placeholder="Password">
                </div>
            </div>
            <button class="btn" asp-controller="Login" asp-action="index">Register</button>
        </form>
    </div>
</div>
