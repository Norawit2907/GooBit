<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GooBit</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GooBit.styles.css" asp-append-version="true" />
    
</head>
<body>

    <header class="header">
        <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn">
                All
                <img src="~/uploadFiles/drop.png"/>
            </button>
            <div id="myDropdown" class="dropdown-content">
                @for(int i = 0; i< 10 ;i++){
                    <a href="#">Link 1</a>
                }
            </div>
        </div> 
        <div class="logo">
            <a class="lo" href="/Home/index">Goo</a>
            <a class="go" href="/Home/index">bit</a>
        </div>
        <div class="right">
            <div class="navbar">
                <a href="#">KITTON SUDLOR</a>
            </div>
            <button>
                <img src="~/uploadFiles/noti.png"/>
            </button>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>

        // JavaScript for page navigation
        document.addEventListener("DOMContentLoaded", function() {
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function(event) {
                    event.preventDefault();
                    const page = this.getAttribute('href');
                    window.location.href = page;
                });
            });
        });
    </script>
</body>
</html>
