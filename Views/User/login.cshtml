@model GooBitAPI.Models.Login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_layoutforLogin.cshtml";
}
<link rel="stylesheet" href="~/css/login_style.css" asp-append-version="true" />
<link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>

<div class="container">
    <div class="login-detail">
        <div class="login-context">
            <h1>GOOBIT</h1>
            <p>Popular place for finding people</p>
        </div>
    </div>
    <div class="login-container">
        <form asp-controller="User" asp-action="Login" method="post">
            <h2>Welcome</h2>
            <div class="input-div one">
                <div class="i">
                    <i class="fas fa-envelope"></i>
                </div>
                <div>
                    <input asp-for="email" class="input" type="email" placeholder="Email Address">
                    <span asp-validation-for="email"></span>
                </div>
            </div>

            <div class="input-div two">
                <div class="i">
                    <i class="fas fa-lock"></i>
                </div>
                <div>
                    <input asp-for="password" class="input" type="password" placeholder="Password">
                    <span asp-validation-for="password"></span>
                </div>
            </div>
            <span class="err">@Html.ValidationMessage("loginValidate")</span>
            <input class="btn" type="submit" value="Login">
            <div class="line"><span>or</span></div>
            <button class="btn" asp-controller="User" asp-action="register">Register</button>
        </form>
    </div>
</div>
